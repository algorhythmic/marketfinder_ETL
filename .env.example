# MarketFinder ETL Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
APP_NAME="MarketFinder ETL"

# API Keys - Set these with your actual credentials
KALSHI_EMAIL=your-kalshi-email@example.com
KALSHI_PASSWORD=your-kalshi-password
POLYMARKET_API_KEY=your-polymarket-api-key

# LLM Providers - Configure at least one
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_VERTEX_AI_KEY=your-vertex-ai-key
GOOGLE_PROJECT_ID=your-google-cloud-project-id

# Database Configuration
DATABASE_URL=postgresql://airflow:airflow@localhost:5432/airflow
DUCKDB_PATH=data/unified_markets.db
CONVEX_DEPLOYMENT=your-convex-deployment-url

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Processing Configuration
MAX_LLM_CALLS_PER_MINUTE=60
BUCKET_PROCESSING_BATCH_SIZE=1000
ML_MODEL_UPDATE_FREQUENCY=daily

# Airflow Configuration
AIRFLOW_HOME=./airflow
AIRFLOW_DAGS_FOLDER=./dags
AIRFLOW_WEBSERVER_PORT=8080

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Processing Limits
ENABLE_PARALLEL_PROCESSING=true
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# API Base URLs (use defaults if not specified)
KALSHI_BASE_URL=https://api.elections.kalshi.com/trade-api/v2
POLYMARKET_BASE_URL=https://gamma-api.polymarket.com

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090